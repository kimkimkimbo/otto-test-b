generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  userId       String   @unique
  passwordHash String
  email        String   @unique
  username     String
  role         Role     @default(USER)
  apiKey       String?  @unique
  createdAt    DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
